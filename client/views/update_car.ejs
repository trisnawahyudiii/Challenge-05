<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Update Car</title>

        <!-- favicon -->
        <link rel="icon" type="image/x-icon" href="../images/favicon.png" />
        <!-- css -->
        <link rel="stylesheet" href="../css/styles.css" />

        <!-- bootsrap -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" />
    </head>
    <body class="d-flex flex-row">
        <!-- sidebar -->
        <section class="left-sidebar d-flex">
            <div class="blue-bar d-flex flex-column align-items-center text-center">
                <div class="blue-bar-items d-flex flex-column align-items-center px-2 pt-3 pb-2 w-100">
                    <img src="../images/small_logo.png" alt="small_company_icon" style="width: 34px" />
                </div>
                <div class="blue-bar-items d-flex flex-column align-items-center p-2 w-100">
                    <img src="../images/Home.png" alt="dashboard_icon" />
                    <span>Dashboard</span>
                </div>
                <div class="blue-bar-items d-flex flex-column align-items-center p-2 w-100 item-active">
                    <img src="../images/truck.png" alt="truck_icon" />
                    <span>Cars</span>
                </div>
            </div>
        </section>
        <div class="w-100">
            <!-- navbar -->
            <nav class="navbar p-0 m-0 sticky-top" style="background-color: #fff">
                <div class="container-fluid p-0 d-flex flex-row">
                    <div class="d-flex flex-row flex-grow-1 align-items-center justify-content-between">
                        <!-- hamberger -->
                        <i class="bi bi-list px-3" style="font-size: 24px"></i>

                        <div class="d-flex flex-row align-content-center">
                            <!-- searchbox -->
                            <form class="d-flex search-box" role="search">
                                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" />
                                <button class="btn btn-outline-success" type="submit">Search</button>
                            </form>

                            <!-- user -->
                            <div class="btn-group ms-2 user-setting">
                                <button type="button" class="btn dropdown-toggle" data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false">
                                    <img src="../images/company_logo.png" class="rounded-circle" alt="" style="width: 38px; height: 38px; object-fit: cover" />
                                    Trisna Wahyudi
                                </button>
                                <ul class="dropdown-menu dropdown-menu-sm-end">
                                    <li>
                                        <button class="dropdown-item" type="button">Setting</button>
                                    </li>
                                    <li>
                                        <button class="dropdown-item" type="button">Logout</button>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
            <!-- navbar -->
            <div class="p-0 m-0 d-flex">
                <!-- whitebar -->
                <div class="white-bar py-3">
                    <div class="pb-2">
                        <a class="navbar-brand px-4 mb-4" href="/" style="width: 220px">
                            <img src="../images/company_logo.png" alt="company_logo" />
                        </a>
                    </div>
                    <div class="mt-4">
                        <div class="white-bar-item px-4 py-2">
                            <h6 class="py-1">CARS</h6>
                        </div>
                        <div class="white-bar-item px-4 py-2 white-bar-item--active">
                            <h6 class="py-1">List Cars</h6>
                        </div>
                    </div>
                </div>
                <!-- whitebar -->
                <div class="main-container flex-grow-1 m-0 p-4 h-100">
                    <!-- breadcrumb -->
                    <nav style="--bs-breadcrumb-divider: '>'" aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="fw-bold text-black text-decoration-none breadcrumb-item">Cars</li>
                            <li class="breadcrumb-item">
                                <a href="/" class="fw-bold text-black text-decoration-none">List Car</a>
                            </li>
                            <li class="breadcrumb-item active">Update Car Information</li>
                        </ol>
                    </nav>
                    <!-- page header -->
                    <div class="pt-2 d-flex justify-content-between">
                        <h4 class="fw-bold">Update Car Information</h4>
                    </div>
                    <!-- form container -->
                    <div class="create-form h-100">
                        <form action="/update-car/<%= cars.id %> " method="POST" enctype="multipart/form-data" class="h-100 d-flex flex-column justify-content-between">
                            <div class="form-container my-3">
                                <div class="p-3 mb-3">
                                    <div class="row mb-3">
                                        <div class="col-xl-2 col-lg-3 col-md-4 col-sm-5">
                                            <label>Nama<label style="color: red">*</label></label>
                                        </div>
                                        <div class="col-xl-4 col-lg-5 col-md-6 col-sm-7">
                                            <input type="text" name="car_name" id="car_name" value="<%= cars.car_name %> " class="form-control" required />
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-xl-2 col-lg-3 col-md-4 col-sm-5">
                                            <label>Sewa Per Hari<label style="color: red">*</label></label>
                                        </div>
                                        <div class="col-xl-4 col-lg-5 col-md-6 col-sm-7">
                                            <input type="text" name="rent_cost" id="rent_cost" value="<%= cars.rent_cost %>" class="form-control" required />
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-xl-2 col-lg-3 col-md-4 col-sm-5">
                                            <label>Ukuran</label>
                                        </div>
                                        <div class="col-xl-4 col-lg-5 col-md-6 col-sm-7">
                                            <select class="form-select" name="car_type" id="car_type">
                                                <option value="1" <%= cars.car_type === 1 ? 'selected' : '' %> >Small</option>
                                                <option value="2" <%= cars.car_type === 2 ? 'selected' : '' %> >Medium </option>
                                                <option value="3" <%= cars.car_type === 3 ? 'selected' : '' %> >Large</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xl-2 col-lg-3 col-md-4 col-sm-5">
                                            <label>Foto<label style="color: red">*</label></label>
                                        </div>
                                        <div class="col-xl-4 col-lg-5 col-md-6 col-sm-7">
                                            <div class="input-group">
                                                <input type="file" name="car_image" class="form-control input-image" id="car_image" required />
                                                <span class="input-group-text"><i class="bi bi-upload"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xl-4 col-lg-5 col-md-6 cols-sm-7">
                                    <a href="/" class="btn btn-outline-primary btn-action btn-outline">Cancel</a>
                                    <button type="button" onclick="confirmCreate()" class="btn btn-primary btn-action btn-fill">Save</button>
                                    <!-- <button type="submit" id="btnSave">Save</button> -->
                                    <button type="submit" id="btnSave" hidden>Save</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- form container -->
                </div>
            </div>
        </div>
        
        <!-- sweet alert cdn  -->
        <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        <script src="../scripts/confirmCreate.js"></script>
        <!-- bootstrap js -->
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js" integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous"></script>
    </body>
</html>
